@model Web.Areas.Admin.MemberModel
@{
    ViewBag.Title = "PendingRegistration";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var Type = TempData["AlertType"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
    int i = 0;
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Registration Request</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Dashboard","Home")"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Data Table</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Registration Request</h4>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Token Id</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Mobile</th>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Trans Date</th>
                                    <th class="text-center">Trans Id</th>
                                    <th class="text-center">Payment Snap</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.List_Registration_Businesses_Obj != null && Model.List_Registration_Businesses_Obj.Count > 0)
                                {
                                    foreach (var items in Model.List_Registration_Businesses_Obj)
                                    {
                                        <tr border="1">
                                            <td class="text-center">@(++i)</td>
                                            <td class="text-center">@items.Token_Id</td>
                                            <td class="text-center">@items.Full_Name</td>
                                            <td class="text-center">@items.Email</td>
                                            <td class="text-center">@items.Mobile</td>
                                            <td class="text-center">
                                                @if (!String.IsNullOrEmpty(items.Img_File))
                                                {
                                                    <a download="@Url.Content(items.Img_File)" href="@Url.Content(items.Img_File)">
                                                        <img src="@Url.Content(items.Img_File)" width="100" />
                                                    </a>
                                                }
                                            </td>
                                            <td class="text-center">@(items.Payment_Date!=null ? items.Payment_Date.Value.ToString("dd/MMM/yy") :"" )</td>
                                            <td class="text-center">@items.Transation_Id</td>
                                            <td class="text-center">
                                                @if (!String.IsNullOrEmpty(items.Payment_SS))
                                                {
                                                    <a download="@Url.Content(items.Payment_SS)" href="@Url.Content(items.Payment_SS)">
                                                        <img src="@Url.Content(items.Payment_SS)" width="100" />
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <ul class="d-flex justify-content-around actions" style="list-style:none">
                                                    <li class="edit">
                                                        @if (items.FK_Reg_Status_Id == 1)
                                                        {
                                                            <a href="@Url.Action("UpdateResStatus","Member",new { Registration_Id=items.Registration_Id, Status_Id=2})" class="btn btn-sm btn-danger">Approve</a>
                                                            <a href="@Url.Action("UpdateResStatus","Member",new { Registration_Id=items.Registration_Id, Status_Id=3})" class="btn btn-sm btn-success">Reject</a>
                                                        }
                                                        else if (items.FK_Reg_Status_Id == 3)
                                                        {
                                                            <a href="@Url.Action("UpdateResStatus","Member",new { Registration_Id=items.Registration_Id, Status_Id=2})" class="btn btn-sm btn-danger">Approve</a>
                                                        }
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Token Id</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Phone</th>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Trans Date</th>
                                    <th class="text-center">Trans Id</th>
                                    <th class="text-center">Payment Snap</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
      var Message = '@Message';
    if (Message != '') {
        iziToast.success({
            title: '@Type',
            message: '@Message',
        });
    }
</script>