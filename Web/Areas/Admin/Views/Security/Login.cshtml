@{
    ViewBag.Title = "Login";
    Layout = null;
    var Type = TempData["AlertType"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Ujjawal Sanskar Login</title>
    <!--favicon-->
    <link rel="icon" href="~/Areas/Admin/Content/assets/images/favicon-32x32.png" type="image/png" />
    <!-- loader-->
    <link href="~/Areas/Admin/Content/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&amp;family=Roboto&amp;display=swap" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/icons.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/app.css" />


    <link href="~/Content/assets/iziToast/iziToast.min.css" rel="stylesheet" />
    <script src="~/Content/assets/iziToast/iziToast.min.js"></script>
</head>

<body class="bg-login">
    <!-- wrapper -->
    <div class="wrapper">
        <div class="section-authentication-login d-flex align-items-center justify-content-center p-2 pt-4">
            <div class="row">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="card radius-15 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-xl-6">
                                <div class="card-body p-3">
                                    <div class="text-center">
                                        <img src="~/Areas/Admin/Content/assets/images/logo-NoBg-Blue.png" width="250" alt="">
                                        <h3 class="mt-4 font-weight-bold">Welcome Back</h3>
                                    </div>
                                    <div class="">
                                        <div class="login-separater text-center mb-4">
                                            <span>SIGN IN WITH User Id Password</span>
                                            <hr>
                                        </div>
                                        <div class="form-body">
                                            @using (Html.BeginForm("Autheticate", "Security", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
                                            {
                                                <div class="col-12">
                                                    <label for="User_Name" class="form-label">User Name</label>
                                                    @Html.TextBox("User_Name", "", new { @class = "form-control mb-0", @type = "text", @placeholder = "User Name", @autocomplete = "off", @required = "required" })
                                                </div>
                                                <div class="col-12">
                                                    <label for="inputChoosePassword" class="form-label">Enter Password</label>
                                                    <div class="input-group" id="show_hide_password">
                                                        @Html.TextBox("Password", "", new { @class = "form-control mb-0", @type = "password", @placeholder = "Enter Password", @autocomplete = "off", @required = "required" })
                                                        <a href="javascript:;" id="User_Passworda" class="input-group-text bg-transparent"><i class="bx bx-hide"></i></a>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                                                        <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 text-end">
                                                    <a href="@Url.Action("ForgotPassword","Security")">Forgot Password ?</a>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i>Sign in</button>
                                                    </div>
                                                </div>
                                                @*<div class="col-12 text-center">
                                                        <p>Don't have an account yet? <a href="authentication-register.html">Sign up here</a></p>
                                                    </div>*@
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 bg-login-color d-flex align-items-center justify-content-center">
                                <img src="~/Areas/Admin/Content/assets/images/login-images/login-frent-img.jpg" class="img-fluid" alt="...">
                            </div>
                        </div>
                        <!--end row-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->
    <!--plugins-->
    <script src="~/Areas/Admin/Content/assets/js/jquery.min.js"></script>
    <!--Password show & hide js -->
    <script>
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bx-hide");
                    $('#show_hide_password i').removeClass("bx-show");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bx-hide");
                    $('#show_hide_password i').addClass("bx-show");
                }
            });
        });
    </script>
    <script>
      var Message = '@Message';
         if (Message != '') {
             iziToast.success({
                 title: '@Type',
                 message: '@Message',
             });
         }
    </script>
</body>
</html>
