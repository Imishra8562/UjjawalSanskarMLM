
@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Syndash - Bootstrap4 Admin Template</title>
    <!--favicon-->
    <link rel="icon" href="~/Areas/Admin/Content/assets/images/favicon-32x32.png" type="image/png" />
    <!-- loader-->
    <link href="~/Areas/Admin/Content/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&amp;family=Roboto&amp;display=swap" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/icons.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/app.css" />
    <script src="~/Areas/Admin/Content/assets/js/jquery.js"></script>
</head>

<body class="bg-forgot">
    <div id="mainbody"></div>
    <script>
        $(document).ready(function () {
             $.ajax({
               url: '@Url.Action("Forgotstep1", "Security")',
               type: 'GET',
           }).done(function (result) {
               $('#mainbody').html(result);
           });
        })


        function GetOtp() {
            var Email_Phone = $("#Email_Phone").val();
             $.ajax({
             url: '@Url.Action("ValidUser", "Security")',
             type: 'GET',
             data:
             {
                 Email_Phone: Email_Phone
             }
             }).done(function (result) {
             
                 $('#FacultyDetails').html(result);
             });
        }
    </script>
</body>
</html>