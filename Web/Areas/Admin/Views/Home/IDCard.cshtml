@model Web.Areas.Admin.HomeModel
@{
    ViewBag.Title = "IDCard";
    Layout = null;
}

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>ID Card - Ujjawal Sanskar</title>
    <!--favicon-->
    <link rel="icon" href="~/Areas/Admin/Content/assets/images/favicon-32x32.png" type="image/png" />

    <script>
        function Print() {
            window.print();
        }
    </script>
    <style>
        .Company {
            left: 16%;
            font-size: 12px;
        }

        * {
            margin: 00px;
            padding: 00px;
            box-sizing: content-box;
        }

        .container {
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #e6ebe0;
            flex-direction: row;
            flex-flow: wrap;
        }

        .font {
            height: 375px;
            width: 250px;
            position: relative;
            border-radius: 10px;
        }

        .top {
            height: 30%;
            width: 100%;
            background-color: #d3ebd4;
            position: relative;
            z-index: 5;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .brand {
            position: absolute;
            height: 15%;
            z-index: 10;
            left: 31%;
            top: 3%;
        }

        .brand1 {
            position: relative;
            height: 15%;
            left: 30.5%;
        }

        .bottom {
            height: 70%;
            width: 100%;
            background-color: white;
            position: absolute;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }

        .top img {
            height: 100px;
            width: 100px;
            background-color: #e6ebe0;
            border-radius: 10px;
            position: absolute;
            top: 75px;
            left: 75px;
        }

        .bottom p {
            position: relative;
            top: 80px;
            text-align: center;
            text-transform: capitalize;
            font-weight: bold;
            font-size: 20px;
            text-emphasis: spacing;
        }

        .bottom .desi {
            font-size: 12px;
            color: grey;
            font-weight: normal;
        }

        .bottom .no {
            font-size: 15px;
            font-weight: normal;
        }

        .barcode img {
            height: 65px;
            width: 65px;
            text-align: center;
            margin: 5px;
        }

        .barcode {
            text-align: center;
            position: relative;
            top: 70px;
        }

        .hr {
            margin-top: 5px;
        }

        .back {
            height: 375px;
            width: 250px;
            border-radius: 10px;
            background-color: #d3ebd4;
        }

        .qr img {
            height: 80px;
            width: 100%;
            margin: 20px;
            background-color: white;
        }

        .Details {
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 25px;
        }

        .details-info {
            padding: 5px;
            line-height: 20px;
            font-size: 16px;
            text-align: center;
            margin-top: 5px;
            line-height: 22px;
        }

        .logo {
            height: 100px;
            width: 100px;
            margin-left: 74px;
        }

            .logo img {
                height: 100%;
                width: 100%;
                color: white;
            }

        .padding {
            padding-right: 20px;
        }

        .terms {
            font-weight: 500;
            margin-top: 10px;
            margin-left: 22px;
        }

        .Company {
            position: relative;
            bottom: 85%;
            left: 20%;
            text-decoration: none;
            color: #000000
        }

        @@media screen and (max-width:400px) {
            .container {
                height: 130vh;
            }

                .container .front {
                    margin-top: 50px;
                }
        }

        @@media screen and (max-width:600px) {
            .container {
                height: 130vh;
            }

                .container .front {
                    margin-top: 50px;
                }
        }

        .print {
            position: absolute;
            margin: -90px;
            bottom: 200px;
        }
        .address{
            margin:5px;
            text-align:center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="padding">
            <div class="font">
                <img src="~/Areas/Admin/Content/assets/images/Yuvaniketana.png" class="brand" />
                <div class="top">
                    @if (Model.Registration_Business_Obj.Img_File == null)
                    {
                        <img src="http://placehold.it/150x150">
                    }
                    else
                    {
                        <img src="@Url.Content(Model.Registration_Business_Obj.Img_File)">
                    }
                </div>
                <div class="bottom">
                    <p><span id="id-card-name"></span></p>
                    <p class="desi">MEMBER</p>
                    <br>
                    <div class="abcd">
                        <p class="no"><b>ID :</b> @Model.Registration_Business_Obj.Token_Id</p>
                        <p class="no"><b>Name :</b> @Model.Registration_Business_Obj.Full_Name</p>
                        <p class="no"><b>Mobile :</b> @Model.Registration_Business_Obj.Mobile</p>
                        <p class="no"><b>Date of Joining :</b> @Model.Registration_Business_Obj.Created_On.Value.ToString("dd-MM-yyyy")</p>
                        <p class="no"><b>Place :</b> @Model.Registration_Business_Obj.Address</p>
                    </div>
                    <br />
                    <p class="no"><b style="color:darkblue">Ujjawal Sanskar</b></p>
                </div>
            </div>
        </div>
        <div class="back">
            <img src="~/Areas/Admin/Content/assets/images/Yuvaniketana.png" class="brand1" />
            <hr class="hr">
            <div class="details-info">
                <h5><u><b>OFFICE DETAILS</b></u></h5>
                <p class="no"><b>Email :</b> ujjawalsanskar2024@gmail.com</p>
            </div>
            <div class="logo">
                <img src="~/Areas/Admin/Content/assets/images/qr.png" />
            </div>
            <br />
            <div class="address">
                <p class="no"><b>Contact :</b> 9632078456</p>
                <p class="no"><b>Address :</b> Ghevarchand Nagar,Maruti Colony,Vijayapur-586102</p>
            </div>
        </div>
        <div class="print">
            <button value="Print" id="cardBtn" onclick="PrintCard();" style="width:70px; font-weight:700;position: absolute;z-index: 1;">Print Card</button>
        </div>
    </div>

</body>

<script>
    function PrintCard() {
        document.getElementById("cardBtn").style.display = "none";
        window.print();
        document.getElementById("cardBtn").style.display = "block";
    }
</script>