@model Web.Areas.Admin.HomeModel
@{
    ViewBag.Title = "UserDonation";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0;
}
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">User Donation List</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">User Donation List</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">User Donation List</h4>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <td>Full Name</td>
                                    <td>Phone No</td>
                                    <td>Amount</td>
                                    <td>UTR No</td>
                                    <td>Date</td>
                                    <td>Payment SS</td>
                                    <td>Note</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.List_User_Donation_Obj != null && Model.List_User_Donation_Obj.Count > 0)
                                {
                                    foreach (var items in Model.List_User_Donation_Obj)
                                    {
                                        <tr>
                                            <td>@(++i)</td>
                                            <td>@items.Full_Name</td>
                                            <td>@items.PhoneNo</td>
                                            <td>@items.DonationAmount</td>
                                            <td>@items.UTR_No</td>
                                            <td>@items.DonationDate.ToString("dd/MMM/yyyy hh:mm:ss tt")</td>
                                            <td>
                                                @if (!String.IsNullOrEmpty(items.PaymentSS))
                                                {
                                                    <img src="@Url.Content(items.PaymentSS)" width="100" />
                                                }
                                            </td>
                                            <td>@items.Note</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <td>Full Name</td>
                                    <td>Phone No</td>
                                    <td>Amount</td>
                                    <td>UTR No</td>
                                    <td>Date</td>
                                    <td>Payment SS</td>
                                    <td>Note</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>