@model Web.Areas.Admin.HomeModel
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var Type = TempData["AlertType"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
}
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">User Profile</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Dashboard","Home")"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="user-profile-page">
                <div class="card radius-15">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-12 col-lg-7 border-right">
                                <div class="d-md-flex align-items-center">
                                    <div class="mb-md-0 mb-3">
                                        @if (!String.IsNullOrEmpty(Model.Registration_Business_Obj.Img_File))
                                        {
                                            <img src="@Url.Content(Model.Registration_Business_Obj.Img_File)" class="rounded-circle shadow" width="130" height="130" alt="" />
                                        }
                                        else
                                        {
                                            <img src="~/Areas/Admin/Content/assets/images/avatars/avatar-4.png" class="rounded-circle shadow" width="130" height="130" alt="" />
                                        }
                                    </div>
                                    <div class="ms-md-4 flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <h4 class="mb-0">@Model.Registration_Business_Obj.Full_Name</h4>
                                        </div>
                                        <p class="text-primary"><i class='bx bx-buildings'></i> Epic Coders</p>
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-12 col-lg-5">
                                    <table class="table table-sm table-borderless mt-md-0 mt-3">
                                        <tbody>
                                            <tr>
                                                <th>Availability:</th>
                                                <td>
                                                    Full-time (40hr/wk) <span class="badge badge-success">available</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Age:</th>
                                                <td>27</td>
                                            </tr>
                                            <tr>
                                                <th>Location:</th>
                                                <td>Sankt, Petersburg, Russia</td>
                                            </tr>
                                            <tr>
                                                <th>Years experience:</th>
                                                <td>6</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>*@
                        </div>
                        <!--end row-->
                        <ul class="nav nav-pills">

                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#Experience"><span class="p-tab-name">Profile</span><i class='bx bx-donate-blood font-24 d-sm-none'></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#Biography"><span class="p-tab-name">Payment</span><i class='bx bxs-user-rectangle font-24 d-sm-none'></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#Edit-Profile"><span class="p-tab-name">Edit Profile</span><i class='bx bx-message-edit font-24 d-sm-none'></i></a>
                            </li>
                        </ul>
                        <div class="tab-content mt-3">
                            <div class="tab-pane fade show active" id="Experience">
                                <div class="card shadow-none border mb-0 radius-15">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label">User ID</label>
                                                @Html.TextBoxFor(m => m.Registration_Business_Obj.Token_Id, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Full Name</label>
                                                @Html.TextBoxFor(m => m.Registration_Business_Obj.Full_Name, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                            </div>                                           
                                            <div class="col-md-6">
                                                <label class="form-label">Email</label>
                                                @Html.TextBoxFor(m => m.Registration_Business_Obj.Email, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Mobile</label>
                                                @Html.TextBoxFor(m => m.Registration_Business_Obj.Mobile, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Gender</label>
                                                @Html.TextBoxFor(m => m.Registration_Business_Obj.Gender, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                            </div>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="Biography">
                                <div class="card shadow-none border mb-0 radius-15">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div>
                                                    <label class="form-label">Account Holder Name</label>
                                                    @Html.TextBoxFor(m => m.Registration_Business_Obj.Account_Holder_Name, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                                </div>
                                                <div>
                                                    <label class="form-label">Account No</label>
                                                    @Html.TextBoxFor(m => m.Registration_Business_Obj.Account_No, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                                </div>
                                                <div>
                                                    <label class="form-label">Bank Name</label>
                                                    @Html.TextBoxFor(m => m.Registration_Business_Obj.Bank_Name, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                                </div>
                                                <div>
                                                    <label class="form-label">IFSC Code</label>
                                                    @Html.TextBoxFor(m => m.Registration_Business_Obj.IFSC_Code, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div>
                                                    <label class="form-label">UPI ID</label>
                                                    @Html.TextBoxFor(m => m.Registration_Business_Obj.UPI_ID, new { @class = "form-control", @type = "text", @readonly = true, @autocomplete = "off", @required = "required" })
                                                </div>
                                                <div class="text-center mt-md-4">
                                                    @if (Model.Registration_Business_Obj.UPI_QR_Code != null && Model.Registration_Business_Obj.UPI_QR_Code != "")
                                                    {
                                                        <img src="@Url.Content(Model.Registration_Business_Obj.UPI_QR_Code)" class="shadow" width="130" height="130" alt="" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Areas/Admin/Content/assets/images/logo-NoBg-Blue.png" class="shadow" width="130" height="130" alt="" />
                                                    }
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="Edit-Profile">
                                <div class="card shadow-none border mb-0 radius-15">
                                    <div class="card-body">
                                        <div class="form-body">
                                            <div class="row">
                                                <div class=" border-right">
                                                    @using (Html.BeginForm("UpdateRegistration", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row" }))
                                                    {
                                                        <div class="col-md-6">
                                                            <label class="form-label">Full Name</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Full_Name, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label class="form-label">Email Id</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Email, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label">Phone No</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Mobile, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label class="form-label">Gender</label>
                                                            @Html.DropDownListFor(m => m.Registration_Obj.Gender, new List<SelectListItem> { new SelectListItem { Text = "Male", Value = "Male" }, new SelectListItem { Text = "Female", Value = "Female" }, new SelectListItem { Text = "Other", Value = "Other" } }, "-- Select --", new { @class = "form-control" })
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label class="form-label">Date Of Birth</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @autocomplete = "off", @required = "required" })
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label class="form-label">Account Holder Name</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Account_Holder_Name, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label">Account No</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Account_No, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label">Bank Name</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.Bank_Name, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label">IFSC Code</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.IFSC_Code, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label">UPI ID</label>
                                                            @Html.TextBoxFor(m => m.Registration_Obj.UPI_ID, new { @class = "form-control", @type = "text", @autocomplete = "off", @required = "required" })
                                                        </div>


                                                        <div class="col-12 col-lg-6">
                                                            <label class="form-label">Picture</label>
                                                            <div class="card shadow-none border mb-0">
                                                                <div class="card-body">
                                                                    <div class="d-flex align-items-center">
                                                                        @if (!String.IsNullOrEmpty(Model.Registration_Obj.Img_File))
                                                                        {
                                                                            <img src="@Url.Content(Model.Registration_Obj.Img_File)" width="50" alt="">
                                                                        }
                                                                        else
                                                                        {
                                                                            <img src="~/Areas/Admin/Content/assets/images/logo-NoBg-Blue.png" width="50" alt="">
                                                                        }
                                                                        @Html.TextBoxFor(m => m.ImageFile, new { @class = "form-control mx-1", @type = "file", @autocomplete = "off" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-lg-6">
                                                            <label class="form-label">QR Code</label>
                                                            <div class="card shadow-none border mb-0">
                                                                <div class="card-body">
                                                                    <div class="d-flex align-items-center">
                                                                        @if (!String.IsNullOrEmpty(Model.Registration_Obj.UPI_QR_Code))
                                                                        {
                                                                            <img src="@Url.Content(Model.Registration_Obj.UPI_QR_Code)" width="50" alt="">
                                                                        }
                                                                        else
                                                                        {
                                                                            <img src="~/Areas/Admin/Content/assets/images/logo-NoBg-Blue.png" width="50" alt="">
                                                                        }
                                                                        @Html.TextBoxFor(m => m.QRCode, new { @class = "form-control mx-1", @type = "file", @autocomplete = "off" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        @Html.HiddenFor(m => m.Registration_Obj.Registration_Id)
                                                        @Html.HiddenFor(m => m.Registration_Obj.FK_User_Id)
                                                        @Html.HiddenFor(m => m.Registration_Obj.FK_Reg_Status_Id)
                                                        @Html.HiddenFor(m => m.Registration_Obj.Registration_Code)
                                                        @Html.HiddenFor(m => m.Registration_Obj.Registration_Code)
                                                        @Html.HiddenFor(m => m.Registration_Obj.Password)
                                                        @Html.HiddenFor(m => m.Registration_Obj.Img_File)
                                                        @Html.HiddenFor(m => m.Registration_Obj.Is_KYC_Approved)
                                                        @Html.HiddenFor(m => m.Registration_Obj.IsPaid)
                                                        

                                                        <div>
                                                            <button class="btn btn-primary mt-2" type="submit">Update</button>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
      var Message = '@Message';
    if (Message != '') {
        iziToast.success({
            title: '@Type',
            message: '@Message',
        });
    }
</script>